lues;		function Parameters()		{			parameter_values=new Array();		}				public function set_parameters_from_xml(xml:XML):void		{			parameter_values=new Array();			add_parameters_from_xml(xml,"/");		}		public function add_parameters_from_xml(xml:XML,ns:String):void		{			for(var o in xml.param)			{				var n=xml.param[o].@name;				var v=xml.param[o].@value;				parameter_values[ns+n]=v;			}			for(var g in xml.group)			{				var group_ns = xml.group[g].@ns;				add_parameters_from_xml(xml.group[g],ns+group_ns+"/");			}		}		public function getParam(name:String,default_value:String):String		{			var v=parameter_values[name];			if(v == null)				{					return default_value;				}			return v;		}		public function setParam(name:String,value:String)		{			parameter_values[name]=value;		}	}}